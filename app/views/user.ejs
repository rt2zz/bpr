<div id="fb-root"></div>
<script>
  window.fbAsyncInit = function() {
    // init the FB JS SDK
    FB.init({
      appId      : <%= config.facebook.appId %>, // App ID from the App Dashboard
      status     : true, // check the login status upon init?
      cookie     : true, // set sessions cookies to allow your server to access the session?
      xfbml      : true  // parse XFBML tags on this page?
    });

    //If no user exists, poll facebook
    if(!data.user){
      // Additional initialization code such as adding Event Listeners goes here
      FB.getLoginStatus(function(response) {
        if (response.status === 'connected') {
          if(data.user){
          }
          else{
            setupUser(response)
          }
        } else if (response.status === 'not_authorized') {
          $('.facebook-login-btb').click(function(){
            fbLogin();
          });
        } else {
          $('.facebook-login-btb').click(function(){
            fbLogin();
          });
        }
      });
    }
    else{
      //user exists, go through login routine
      console.log(data.user)
      loginRoutine()
    }
  };

  function setupUser(fbResponse){
    console.log('setup user')
    $.ajax('/user/setup',{
      type: "POST",
      data: {
        fbResponse:fbResponse
      }
    }).done(function(response){
      console.log(response)
      data.user = JSON.parse(response)
      loginRoutine()
    }); 
  }

  function loginRoutine(){
    console.log('routine')
    $('.emailwrapper').remove()
    $('.social-media').before('<img class="profile-image" src="https://graph.facebook.com/'+data.user.fb.id+'/picture"/>')
    var votes = data.user.votes
    console.log(data.user)
    console.log(votes)
    assignVotes(votes)
  }

  function assignVotes(votes){
    $.each(votes, function(i, val){
      // var dir = val == -1 ? 'down' : 'up'
      // console.log(i)
      // $('.giftbox[giftid='+i+']').find('.vote[dir='+dir+']').addClass('active')
      // console.log('added', dir, val)
    })
  }

  function fbLogin() {
    FB.login(function(response) {
      if (response.authResponse) {
        setupUser(response)        
      } else {
          // cancelled
      }
    });
  }
