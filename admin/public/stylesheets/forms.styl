.section
  border: 1px solid #e5e5e5;
  background: #f9f9f9;
  padding: 20px 30px 20px 30px;
  border-radius: 3px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.07);
  position: relative;

.section.action
  background:#f5f9f9

label
  min-width:110px
  display:inline-block

hr
  border-top: 1px solid #EBEBEB;

input[type='textfield'], textarea
  border:1px solid #ddd
  padding:6px 10px
  resize:none
  vertical-align:top

textarea
  width:390px
  height:100px

.row
  margin:7px 0

.options
  display:inline-block


input[readonly]
  background:#eee

input[type="textfield"]
  width:390px

.thumbs
  overflow:hidden
  margin-top:10px


.mediaItem
  float:left
  background: white
  border:1px solid #ddd
  padding:5px
  position:relative
  overflow:hidden
  margin:0 5px 5px 0
  
.mediaItem:hover .mediaMover
  background:rgba(0,0,0,.5)
  font-size:13px

.mediaItem .mediaMover
  padding:27px 5px
  position:absolute
  font-size:0
  color:white
  font-weight:bold
  z-index:100


.mediaMover.left
  left:5px

.mediaMover.right
  right:5px

.mediaItem a, .mediaItem img
  float:left

.mediaDeleter
  text-shadow: 0px 0px 1px #ffffff;
  color:#A12222
  position:absolute
  top:0
  right:30px
  display:none
  font-size:0
  font-size:20px
  font-weight:bold

.mediaItem:hover .mediaDeleter
  display:block

.mediaItem iframe
  height:70px
  width:120px
